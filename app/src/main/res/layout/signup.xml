<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:transitionName="constraint"
    android:id="@+id/constraint2"
    android:background="@drawable/gradient"
    android:textAllCaps="false"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:id="@+id/constraint3"
        android:fitsSystemWindows="true"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/signup"
            android:layout_width="162dp"
            android:layout_height="59dp"
            android:layout_marginStart="44dp"
            android:layout_marginTop="128dp"
            android:fontFamily="@font/cabin_semibold"
            android:paddingTop="20dp"
            android:text="Sign Up"
            android:textAlignment="viewStart"
            android:textColor="#FFFFFF"
            android:textSize="28sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/nameedit"
            android:layout_width="273dp"
            android:layout_height="47dp"
            android:layout_marginStart="64dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/strokes"
            android:ems="10"
            android:fontFamily="sans-serif-light"
            android:inputType="textPersonName"
            android:textColor="#FFFFFF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/name" />


        <TextView
            android:id="@+id/email"
            android:layout_width="138dp"
            android:layout_height="36dp"
            android:layout_marginStart="64dp"
            android:layout_marginTop="7dp"
            android:fontFamily="@font/cabin_semibold"
            android:paddingTop="10dp"
            android:text="Email"
            android:transitionName="email"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nameedit" />

        <EditText
            android:id="@+id/emailedit"
            android:layout_width="273dp"
            android:layout_height="45dp"
            android:layout_marginStart="64dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/strokes"
            android:ems="10"
            android:fontFamily="sans-serif-light"
            android:inputType="textPersonName"
            android:textColor="#FFFFFF"
            android:transitionName="emailedit"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/email" />

        <TextView
            android:id="@+id/name"
            android:layout_width="131dp"
            android:layout_height="37dp"
            android:layout_marginStart="64dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/cabin_semibold"
            android:paddingTop="12dp"
            android:text="Name"
            android:textColor="#FFFFFF"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/signup" />


        <EditText
            android:id="@+id/passedit"
            android:layout_width="273dp"
            android:layout_height="47dp"
            android:layout_marginStart="64dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/strokes"
            android:ems="10"
            android:transitionName="passedit"
            android:fontFamily="sans-serif-light"
            android:inputType="textPersonName"
            android:textColor="#FFFFFF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pass" />


        <TextView
            android:id="@+id/pass"
            android:layout_width="138dp"
            android:layout_height="36dp"
            android:layout_marginStart="64dp"
            android:layout_marginTop="7dp"
            android:fontFamily="@font/cabin_semibold"
            android:paddingTop="10dp"
            android:transitionName="pass"
            android:text="Password"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/emailedit" />

        <EditText
            android:id="@+id/confirmpassedit"
            android:layout_width="273dp"
            android:layout_height="45dp"
            android:layout_marginStart="64dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/strokes"
            android:ems="10"
            android:fontFamily="sans-serif-light"
            android:inputType="textPersonName"
            android:textColor="#FFFFFF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/confirmpass" />

        <TextView
            android:id="@+id/confirmpass"
            android:layout_width="170dp"
            android:layout_height="36dp"
            android:layout_marginStart="64dp"
            android:layout_marginTop="7dp"
            android:fontFamily="@font/cabin_semibold"
            android:paddingTop="12dp"
            android:text="Confirm Password"
            android:textColor="#FFFFFF"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/passedit" />

        <Button
            android:id="@+id/button"
            android:layout_width="172dp"
            android:layout_height="64dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/strokes"
            android:fontFamily="@font/cabin_semibold"
            android:text="Login Now"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/confirmpassedit" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="154dp"
            android:layout_height="120dp"
            android:text="TextView"
            android:textColor="#FFFFFF"
            android:textSize="50sp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="256dp"
        android:layout_height="147dp"
        android:tint="#FFFFFF"
        android:transitionName="logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

</androidx.constraintlayout.widget.ConstraintLayout>