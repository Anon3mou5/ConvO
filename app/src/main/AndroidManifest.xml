<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.convo">

    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".MainActivity"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".signactivity"
            android:windowSoftInputMode="adjustPan">
        </activity>
        <activity android:name=".Acti"
            android:windowSoftInputMode="adjustResize">

        </activity>
        <activity android:name=".loginactivity"
            android:windowSoftInputMode="adjustPan">
        </activity>
        <activity android:name=".ContactsActivity"
            android:windowSoftInputMode="adjustResize">

        </activity>
        <activity android:name=".Singleactivity">

        </activity>

        <activity android:name=".worldActivity">
        </activity>


        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <service
            android:name=".tokengen"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>
        <service android:name=".myservice"
            android:enabled="true"/>


        <service
            android:name=".myfirebasemessaging"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <service android:name=".myservice"
            android:enabled="true"/>

        <receiver
            android:name=".breceiver"
            android:enabled="true"
            android:exported="true"
            android:label="RestartServiceWhenStopped"
            android:permission="android.permission.RECEIVE_BOOT_COMPLETED">
            <intent-filter>
                <action android:name="RestartService" />
            </intent-filter>
        </receiver>

        <receiver
            android:name=".closenotify"
            android:enabled="true"
            >
        </receiver>
    </application>

</manifest>